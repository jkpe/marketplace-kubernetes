{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPaths": ["stacks/csi-s3/deploy.sh"],
      "matchPackagePatterns": ["CHART_VERSION"],
      "replaceStrings": [
        {
          "datasource": "github-releases",
          "lookupName": "yandex-cloud/k8s-csi-s3",
          "extractVersion": "^v(?<version>\\d+\\.\\d+\\.\\d+)$"
        }
      ]
    }
  ]
}